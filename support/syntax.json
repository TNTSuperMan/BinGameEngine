{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "bge",
    "patterns": [
        {
            "include": "#keywords"
        }
    ],
    "repository": {
         "keywords": {
             "patterns": [
                {
                    "name": "keyword.control",
                    "match": "\\b(push|pop|cls|pls|sub|mul|div|rem|nand|sin|sqrt|truejump|jump|call|equal|greater|load|store|ret|redraw|pixel|rect|chkkey)\\b"
                },
                {
                    "name": "entity.name.tag",
                    "match": ":[\\w]+"
                },
                {
                    "name": "constant.numeric",
                    "match": "([\\da-fA-F]){1,4}"
                },
                {
                    "name": "comment.line",
                    "match": "^;.*"
                }
            ]
        }
    },
    "scopeName": "source.bge"
}